{
  "manifest_version": 3,
  "name": "Sumo Bug Logger",
  "version": "1.0",
  "description": "A Chrome extension for logging bugs in Sumo Logic.",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/bug.png",
      "48": "icons/bug.png",
      "128": "icons/bug.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.sumologic.com/*",
        "http://localhost/*",
        "https://localhost/*",
        "http://127.0.0.1/*",
        "https://127.0.0.1/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "host_permissions": [
    "https://*.sumologic.com/*",
    "http://localhost/*",
    "https://localhost/*",
    "http://127.0.0.1/*",
    "https://127.0.0.1/*"
  ],
  "permissions": ["storage", "activeTab", "scripting", "notifications", "debugger"],
  "icons": {
    "16": "icons/bug.png",
    "48": "icons/bug.png",
    "128": "icons/bug.png"
  }
}